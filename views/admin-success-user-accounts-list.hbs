</head>
    
<body>

    <div class="defcontainer">
        <div class="defheader">

        </div>
        
        {{> loggedInNavbar}}
        

        <!-- Admin Panel -->
        <div class="container">
            <div class="jumbotron jumbotron-fluid">
                <div class='container'>
                        <h1>Welcome to the Admin Page</h1>
                        <br>
                        </p>
                        <div>
                                <div>
                                    <table name="mytable">
                                        <tr style="background-color: white; border-padding:20px;">
                                            <th style= "padding:20px" name="id">ID</th>
                                            <th style= "padding:20px" name="username">Username</th>
                                            <th style= "padding:20px" name="firstname">First name</th>
                                            <th style= "padding:20px" name="lastname">Last Name</th>
                                            <th style= "padding:20px" name="balance">Balance</th>
                                            <th style= "padding:20px" name="balance">Type</th>
                                        </tr>
                                        <p>
                                        {{#each result}}
                                                <tr style="background-color: white;">
                                                    <td style= "padding:20px">{{this._id}}</td>
                                                    <td style= "padding:20px">{{this.username}}</td>
                                                    <td style= "padding:20px">{{this.firstname}}</td>
                                                    <td style= "padding:20px">{{this.lastname}}</td>
                                                    <td style= "padding:20px">{{this.cash2}}</td>
                                                    <td style= "padding:20px">{{this.type}}</td>
                                                </tr>
                                        {{/each}}
                                        </p>
                                        </table>
                                </div>
                          </div>
                          <br>
                          <div class="form-group">
                             <form action="/admin-success-user-accounts" method="POST">
                                <input type="submit" class="btn btn-info" id="loadport" value="Load Users">
                             </form> 
                          </div>
                        </div>
                        <br>
                        <div class='container'>
                            <p><i>{{message}}</i></p>
                            <div class="row">
                                <div class="col">
                                    <form  id="deleteuser" action='/admin-success-delete-user-success', method='POST'>
                                        <label for="stocksearch">Enter Username to Delete</label>
                                        <input type="text" class="form-control" name="user_id" id="user_id" placeholder="Username">
                                        <br>
                                            <p align="left">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </p>
                                        <br>
                                    </form>
                                </div>
                              </div>
                              <div class="row">
                                <div class="col">
                                    <form  id="updateuser" action='/admin-success-change-user-type', method='POST'>
                                        <label for="stocksearch">Enter Username to Change Type to Admin</label>
                                        <input type="text" class="form-control" name="user_id" id="user_to_admin" placeholder="Username">
                                        <br>
                                            <p align="left">
                                                <button type="submit" class="btn btn-danger">Update</button>
                                            </p>
                                        <br>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                  </div>
            </div>
        </div>


        {{> footer}}

    </div> 



