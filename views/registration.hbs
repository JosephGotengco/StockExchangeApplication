        <div class="defcontent">
            <br>
            <div class='chfont container'>

                <form action ="/register" method="POST">
                <p>{{title}}</p>

                    <br>

                  <div class="form-group">
                    <label for="firstname">First Name</label>
                    <input type="text" class="form-control border border-right-0" name='firstname' id="firstname" placeholder="First name must be 3-30 characters long and must only contain letters.">
                  </div>
                  <div class="form-group">
                    <label for="lastname">Last Name</label>
                    <input type="text" class="form-control border border-right-0" name='lastname' id="lastname" placeholder="Last name must be 3-30 characters long and must only contain letters.">
                  </div>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control border border-right-0" name='username' id="username" placeholder="Username must have 5-15 characters and may only be alphanumeric.">
                  </div>
                  <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control border border-right-0" name='password' id="password" placeholder="Password must have 5-15 characters and may only be alphanumeric.">
                  </div>
                  <div class="form-group">
                    <label for="confirm_password">Confirm Password</label>
                    <input type="password" class="form-control border border-right-0" name='confirm_password' id="confirm_password" placeholder="Confirm Password">
                  </div>
                    <input type="submit" class="btn btn-info" value="Register">
                <br><br>
                </form>
            </div>
